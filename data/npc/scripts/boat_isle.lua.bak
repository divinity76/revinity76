  	return (string.find(txt, str) and not string.find(txt, '(%w+)' .. str) and not string.find(txt, str .. '(%w+)'))
 end
 
 
 function onCreatureSay(cid, type, msg)
  	msg = string.lower(msg)
 
  	if ((string.find(msg, '(%a*)hi(%a*)')) and (focus == 0)) and getDistanceToCreature(cid) < 4 then
  		selfSay('Hello ' .. creatureGetName(cid) .. '! I am heading to the Isle of No Return for 25 GP I can take you too. Would you like to come along?')
  		focus = cid
  		talk_start = os.clock()
  	end	if string.find(msg, '(%a*)hi(%a*)') and (focus ~= cid) and getDistanceToCreature(cid) < 4 then
  		selfSay('Sorry, ' .. creatureGetName(cid) .. '! Give me a second here!')
  	end
 
  	if msgcontains(msg, 'yes') and focus == cid then
  		if pay(cid,50) then
 			selfSay('Huzzah!')
 			selfSay('/send ' .. creatureGetName(cid) .. ', 188 151 7')
 			focus = 0
 			talk_start = 0
 		else
 			selfSay('Sorry, you don\'t have enough money.')
 			talk_start = os.clock()
 		end
  	end
 
  	if string.find(msg, '(%a*)bye(%a*)') and focus == cid and getDistanceToCreature(cid) < 4 then
  		selfSay('Later then, ' .. creatureGetName(cid) .. '!')
  		focus = 0
  		talk_start = 0
  	end
 end
 
 
